{
	"name": "spidgorny/nadlib",
	"minimum-stability": "dev",
	"require": {
		"php": ">= 8",
		"ext-pdo": "*",
		"ext-pgsql": "*",
		"ext-simplexml": "*",
		"danielstjules/stringy": ">=1.5.1",
		"essence/essence": "dev-master",
		"ezyang/htmlpurifier": "dev-master",
		"greenlion/php-sql-parser": "^4.6",
		"guzzlehttp/guzzle": "^7.7",
		"illuminate/collections": "10.x-dev",
		"leafo/lessphp": "0.4.0",
		"michelf/php-markdown": "^2.0",
		"mustangostang/spyc": "^0.6.3",
		"predis/predis": "v2.x-dev",
		"squizlabs/php_codesniffer": "^3.0@dev"
	},
	"suggest": {
		"mustangostang/spyc": "dev-master",
		"league/flysystem": "^2.5",
		"phpauth/phpauth": "dev-master",
		"gnat/nc-cms": "dev-master",
		"spidgorny/advanced-html-dom": "dev-master",
		"htmlawed/htmlawed": "dev-master"
	},
	"require-dev": {
		"league/flysystem-memory": "^2.0",
		"php-parallel-lint/php-console-highlighter": "^0.3.2",
		"php-parallel-lint/php-parallel-lint": "^1.3",
		"phpspec/phpspec": "7.5.x-dev",
		"phpstan/phpstan": "2.0.x-dev",
		"phpunit/phpunit": "^8",
		"roave/security-advisories": "dev-latest"
	},
	"scripts": {
		"upgrade:all": "composer upgrade -W",
		"lint": "@php vendor/bin/parallel-lint . --exclude vendor",
		"phpstan": "@php vendor/bin/phpstan analyze -l 1 --memory-limit 1G .",
		"phpstan:2": "@php vendor/bin/phpstan analyze -l 2 --memory-limit 1G .",
		"test": "@php vendor/bin/phpunit tests --bootstrap init.php"
	},
	"autoload": {
		"classmap": [
			"./",
			"Base/",
			"Cache/",
			"Controller/",
			"CSS/",
			"Data/",
			"DB/",
			"Debug/",
			"HTML/",
			"HTMLForm/",
			"HTTP/",
			"LocalLang/",
			"ORM/",
			"SQL/",
			"Queue/",
			"Runner/",
			"SQL/",
			"Time/",
			"User/"
		],
		"files": [
			"init.php"
		]
	},
	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "gnat/nc-cms",
				"version": "master",
				"source": {
					"url": "https://github.com/gnat/nc-cms",
					"type": "git",
					"reference": "master"
				}
			}
		},
		{
			"type": "package",
			"package": {
				"version": "dev-master",
				"name": "gerhobbelt/htmlawed",
				"source": {
					"url": "https://github.com/GerHobbelt/HTMLawed",
					"type": "git",
					"reference": "master"
				}
			}
		},
		{
			"type": "vcs",
			"url": "https://github.com/spidgorny/advanced-html-dom"
		}
	]
}
